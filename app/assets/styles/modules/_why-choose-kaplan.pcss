.why-choose-kaplan {
  position: relative;
  width: 100%;

  background-color: #f0f0f0;
  height: auto;
  overflow: hidden;

  &.lazyloaded {
    background: url('../../assets/images/testimonial-bg.jpg') top center no-repeat fixed/*rtl:url("../../assets/images/why-kaplan-bg-ar.jpg") top center no-repeat*/;
    background-size: cover;

  }


  @mixin atMedium {
    min-height: 350px;
  }

  @mixin atRetina {

    &.lazyloaded {
      background: url("../../assets/images/testimonial-bg@2x.jpg") top center no-repeat fixed/*rtl:url("../../assets/images/why-kaplan-bg-ar@2x.jpg") top center no-repeat*/;
      background-size: cover;
      background-position: fixed;

    }

  }

  &__percent {

    display: none;
    lost-column: 1/1;

    @mixin atMedium {
      display: block;

      lost-column: 2/4;
    }

    @mixin atLarge {
      lost-column: 1/6;
      lost-offset: 2/6;
    }

  }

  &__percent-inner {
    width: 100%;
  }

  &__content {

    lost-column: 1/1;
    min-height: 50px;

    @mixin atLarge {
      lost-column: 1/16;

    }

    @mixin atMedium {
      lost-column: 1/1;
    }

  }

  &__content-inner {

    width: 100%;
    margin-top: 0;

    @mixin atMedium {
      margin-top: 65px;
    }
  }

  &__subtitle {
    max-width: 100%;
    font-size: 18px;
    color: white;
    margin-bottom: 10px;
    font-weight: 400;
    text-align: center;

    @mixin atMedium {
      text-align: left;
    }
    strong {
      font-weight: 900;
    }

  }

  ul {
    margin: 0;
    padding: 0;
    list-style: none;

    @mixin atSmall {
      display: block;

    }

    li {
      font-size: 15px;
      color: white;
      line-height: 140%;
      text-align: center;
      margin-bottom: 5px;
      @mixin atMedium {
        text-align: center;

      }
    }
  }

  p {
    color: #FFFFFF;
    text-align: center;

    @mixin atMedium {
      max-width: 940px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  &__external-link {
    display: block;
    font-size: 14px;
    color: #c1d82f;
    font-weight: 400;
    text-transform: uppercase;
    cursor: pointer;
    text-decoration: none;
    margin-bottom: 10px;
    text-align: center;
    @mixin atMedium {
      text-align: left;

    }

    &:hover {
      color: white;

    }
  }
}